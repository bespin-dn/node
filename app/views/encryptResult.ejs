<html>
    <head>
        <link href="all.min.css" rel="stylesheet">
        <link href="bootstrap.min.css" rel="stylesheet">
        <link href="bootstrap.bundle.min.js" rel="stylesheet">
    </head>
    <body>
        <div class="container">
          <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
              <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                  <h5 class="card-title text-center mb-5 fw-light fs-5">ENCRYPT</h5>
                  <label><%= plainText %></label>
                  <hr>
                  <label><%= result %></label>
                </div>
                <div class="card-body p-4 p-sm-5">
                    <form method="POST" action="decrypt">
                        <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit" name="cipherText" value=<%= result %>>DECRYPT</button>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </body>
</html>
