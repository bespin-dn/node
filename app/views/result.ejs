<html>
    <head>
        <link href="all.min.css" rel="stylesheet">
        <link href="bootstrap.min.css" rel="stylesheet">
        <link href="bootstrap.bundle.min.js" rel="stylesheet">
    </head>
    <body>
        <div class="container">
          <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
              <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                  <h5 class="card-title text-center mb-5 fw-light fs-5">ENCRYPT</h5>
                  <form method="POST" action="/encrypt">
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control" id="floatingInput" name="plainText">
                      <label for="floatingInput">Plain Text</label>
                      <label><%= data.plainText %></label>
                      <label><%= data.encryptText %></label>
                    </div>
                    <div class="d-grid">
                      <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">ENCRYPT</button>
                    </div>
                    <hr class="my-4">
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </body>
</html>
